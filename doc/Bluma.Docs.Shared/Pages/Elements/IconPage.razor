@page "/elements/icon"

<PageHeader Title="图标（Icon）">
    Bulma is compatible with all icon font libraries: Font Awesome 6
</PageHeader>

<Example>
    <RunContent>
        <Icon Name="house-user"/>
    </RunContent>
    <CodeContent>
        <CodeHighlight CodeLanguage="html">
            @(@"<Icon Name=""house-user""/>")
        </CodeHighlight>
    </CodeContent>
</Example>
<Example Title="Icon Text">
    <RunContent>
        <Icon Name="house-user" >
            Home
            </Icon>
    </RunContent>
    <CodeContent>
        <CodeHighlight CodeLanguage="html">
            @(@"
        <Icon Name=""house-user"" >
            Home
        </Icon>")
        </CodeHighlight>
    </CodeContent>
</Example>

